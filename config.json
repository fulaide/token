
{
    "source": [
        "**/*.tokens.json"
      ],
      "platforms": {
        "css": {
          "buildPath": "token-build/css/",
          "prefix": "sd",
          "transformGroup": "tokens-studio",
          "files": [
            {
              "destination": "variables.css",
              "format": "css/variables"
            }
          ]
        },
        "js": {
          "buildPath": "token-build/js/",
          "transformGroup": "tokens-studio",
          "files": [
            {
              "destination": "variables.js",
              "format": "javascript/es6"
            }
          ]
        }
      }
}